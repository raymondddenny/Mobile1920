<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name='MyData'
            type="com.github.raymondddenny.loremgenerator.MyData"/>
        <variable
            name="pirateIpsum"
            type="com.github.raymondddenny.loremgenerator.MyData" />
        <variable
            name="cupcakeIpsum"
            type="com.github.raymondddenny.loremgenerator.MyData" />
        <variable
            name="cheeseIpsum"
            type="com.github.raymondddenny.loremgenerator.MyData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding"
        android:paddingEnd="@dimen/padding">

        <TextView
            android:id="@+id/title_text"
            style="@style/text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_text"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/creator_fill_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@={MyData.placeholder}"
            android:textAppearance="@style/text_style" />

        <Button
            android:id="@+id/creator_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/confirm" />

        <TextView
            android:id="@+id/creator_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@={MyData.creator}"
            android:textAlignment="center"
            android:textAppearance="@style/text_style"
            android:background="@color/colorAccent"
            android:paddingBottom="@dimen/small_padding"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/ipsum_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:paddingTop="@dimen/padding" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:contentDescription="@string/yellow_star"
            android:scaleX="2"
            android:scaleY="2"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_margin">

            <TextView
                android:id="@+id/lorem_text"
                style="@style/text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/lorem_text" />
        </ScrollView>

    </LinearLayout>
</layout>